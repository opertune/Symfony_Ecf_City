{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Accueil</h1>
    <br>
    <br>
    <div class="container">
        <div class="row justify-content-center">
            <div class=" col-4 d-flex align-items-center justify-content-center">
                <div id="carouselExampleCaptions" class="carousel slide col-12" data-bs-ride="carousel" data-interval="false">
                <h3>Actualités</h3>
                    <div class="carousel-inner">
                        {% for key, new in news %}
                            {{ key == 0 ? '<div class="carousel-item active">' : '<div class="carousel-item">'}}
                                <img src="{{new.image}}" class="d-block w-100" alt="...">
                                <div class="carousel-caption d-none d-md-block text-light bg-dark opacity-75">
                                    <a href="/"><h5>{{new.title}}</h5></a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

            <div class="col-4">
                <div style="border-left: 1px solid white;height: 500px;"></div>
            </div>

            <div class="col-4 d-flex align-items-center justify-content-center">
                <div id="carouselExampleCaptions2" class="carousel slide col-12" data-bs-ride="carousel" data-interval="false">
                <h3>Évènements</h3>
                    <div class="carousel-inner">
                        {% for key, event in events %}
                            {{ key == 0 ? '<div class="carousel-item active">' : '<div class="carousel-item">'}}
                                <img src="{{event.image}}" class="d-block w-100" alt="...">
                                <div class="carousel-caption d-none d-md-block text-light bg-dark opacity-75">
                                    <a href="/"><h5>{{event.title}}</h5></a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}