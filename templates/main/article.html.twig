{% extends "base.html.twig" %}

{% block title %}Évènements{% endblock %}

{% block body %}
    <div class="container-fluid">
    <div class="row">
    <div class="d-flex mt-4 mb-4"><h1 class="ms-5">{{ article.title }}</h1></div>
        <div class="col-4 d-flex align-items-center justify-content-center">
            <img class="img-fluid rounded" src="{{article.image}}" alt="Image article">
        </div>
        <div class="col-1">
            <div style="border-left: 1px solid white;height: 500px;"></div>
        </div>
        <div class="col mt-5">
            <p class="blockquote">{{ article.description | raw}}</p>
            <br>
            <p class="blockquote-footer fst-italic">Rédigé le {{ article.date | date('d/m/Y')}}</p>
        </div>
    </div>
    </div>
{% endblock %}