{% extends "base.html.twig" %}
{% block title %}Rechercher{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="d-flex mt-4 mb-4"><h1 class="ms-5">Recherche contenant le mot : {{search}}</h1></div>
            {% for new in news %}
                <article class="col-md-4 mx-2 my-2 border rounded">
                    <div>
                        <h5>{{new.title}}</h5>
                        <img src="{{new.image}}" alt="image" style="width: 100%; height: 100%">
                        <p class="text-truncate">{{new.description}}</p>
                        <a class="btn btn-primary mb-2" href="{{ path("show_event", {'id': new.id})}}">Voir plus</a>
                    </div>
                </article>
            {% endfor %}
            {% for event in events %}
                <article class="col-md-4 mx-2 my-2 border rounded">
                    <div>
                        <h5>{{event.title}}</h5>
                        <img src="{{event.image}}" alt="image" style="width: 100%; height: 100%">
                            <p class="text-truncate">{{event.description}}</p>
                        <a class="btn btn-primary mb-2" href="{{ path("show_event", {'id': event.id})}}">Voir plus</a>
                    </div>
                </article>
            {% endfor %}
    </div>
</div>
{% endblock %}